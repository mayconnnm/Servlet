<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Gerenciador</display-name>
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>nomeServlet</servlet-name>
    <servlet-class>br.com.alura.servlet.OlaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>nomeServlet</servlet-name>
    <url-pattern>/ola</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>FM</filter-name>
    <filter-class>br.com.alura.servlet.FiltroMonitoramento</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FM</filter-name>
    <url-pattern>/entrada</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FA</filter-name>
    <filter-class>br.com.alura.servlet.FiltroAutorizacao</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FA</filter-name>
    <url-pattern>/entrada</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>UE</servlet-name>
    <servlet-class>br.com.alura.servlet.UnicaEntrada</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UE</servlet-name>
    <url-pattern>/entrada</url-pattern>
  </servlet-mapping>
</web-app>